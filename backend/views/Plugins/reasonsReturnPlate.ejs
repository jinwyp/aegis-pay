<!-- 退回原因提示框 板块 -->
<% if(order.status == 'WaitVerifySettle' || order.status == 'ReturnedSettleAccounts') {%>
<div id="reasonsReturnPlate">
    <% if(userType == 'buy' && order.status == 'WaitVerifySettle'){ %>
    <!-- 待审核.状态提示-->
    <div class="reasonsReturn mt20">
        <div class="reasonsReturn_back show">
            <h2 class="returnTitle"><span class="statusLab">当前状态：</span>待确认结算</h2>
            <p class="sf">您还有
                <span class="bright Day">12</span>天
                <span class="bright Hour">12</span>小时
                <span class="bright Minute">12</span>分
                <span class="bright Second">12</span>秒来确认结算单，<span class="bright">超时系统将默认</span>贵公司已确认结算单。</p>
        </div>
    </div>
    <% } %>

    <% if(userType == 'buy' && order.status == 'ReturnedSettleAccounts'){ %>
    <div class="reasonsReturn mt20">
        <!-- 审核退回.查看原因-->
        <div class="reasonsReturn_view show">
            <h2 class="returnTitle">您已退回结算单，等待卖家修改!</h2>
            <table class="returnTab">
                <tbody>
                <tr>
                    <td width="66">退回原因：</td>
                    <td>
                        <span class="bright">符合国际化港口健康符合国际化港口健康符合国际化港口健康符合国际化港口健康。</span>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>2016-06-01 15:46:32</td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="button" id="but123124" class="iBtn iBtn_sm iBtn_edit mt10" value="修改退回原因"/>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>

        <!-- 审核退回.修改原因-->
        <div class="reasonsReturn_edit .show">
            <h2 class="returnTitle">您已退回结算单，等待卖家修改!</h2>
            <table class="returnTab">
                <tbody>
                <tr>
                    <td class="va_top" width="66">退回原因：</td>
                    <td>
                        <div class="txtAreaBox">
                            <div class="dockDown">您还可以输入<span class="limitNum">200</span>个字</div>
                            <textarea class="txtArea .returnText" name="remarks" rows="7" maxlength="200" placeholder="您可输入汉字、英文、数字、符号。"></textarea>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>2016-06-01 15:46:32</td>
                </tr>
                <tr>
                    <td></td>
                    <td class="txt_c">
                        <input type="button" id="btn22222" class="iBtn iBtn_def" value="取消">
                        <input type="button" id="btn33333" class="iBtn iBtn_yes ml20" value="确认"><br/><br/>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
    <% } %>

    <% if(userType == 'sell' && order.status == 'ReturnedSettleAccounts'){ %>
    <!-- 审核退回.卖家修改-->
    <div class="reasonsReturn againRefer mt20">
        <div class="reasonsReturn_view show">
            <h2 class="returnTitle">结算单已被买家退回，请核算修改之后重新提交!</h2>
            <table class="returnTab">
                <tbody>
                <tr>
                    <td width="66">退回原因：</td>
                    <td>
                        <span class="bright">符合国际化港口健康符合国际化港口健康符合国际化港口健康符合国际化港口健康。</span>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>2016-06-01 15:46:32</td>
                </tr>
                <tr>
                    <td> </td>
                    <td> </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
    <% } %>
</div>
<% } %>