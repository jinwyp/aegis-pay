                                    <td class="dateWrap"><input type="text" class="checkTime" name="checkTime" placeholder="yyyy-mm-dd" /></td>
                                    <td><input type="text" name="checkAmount"/></td>
                                    <%var Tindex=0; for(var i in indexList){ Tindex++%>
                                        <% if(Tindex<=6) {%>
                                        <td><input type="text" name=<%=i%> /></td>
                                        <%}%>
                                    <%}%>
