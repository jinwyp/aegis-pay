                                        <a href="javascript:void(0)" class="del" style="display: none;">删除</a>
                                        <a href="javascript:void(0)" class="add">增加</a>
                                    </td>
                                </tr>
                                <tr class="thead">
                                    <%var Tindex=0; for(var i in indexList){ Tindex++%>
                                        <% if(Tindex>6) {%>
                                        <td width="92"><%= indexList[i] %></td>
                                        <%}%>
                                    <%}%>
                                    <% for(var i=0;i<14-count;i++) {%>
